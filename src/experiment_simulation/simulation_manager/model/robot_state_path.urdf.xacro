<?xml version="1.0"?>

<robot name="item" xmlns:xacro="http://ros.org/wiki/xacro">

  <link name="base">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.001" />
      <inertia  ixx="0.0" ixy="1.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.02" />
      </geometry>
    </visual>
  </link>

  <gazebo reference="base">
    <material>Gazebo/BlueTransparent</material>
  </gazebo>

  <gazebo>
    <static>true</static>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>
</robot>
